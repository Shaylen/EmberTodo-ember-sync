{{#if isEditing}}
	{{edit-todo class="edit" type="test" value=title focusOut="saveEdit(todo)" insert-newline="saveEdit"}}
{{else}}
	{{input type="checkbox" checked=isCompleted class="toggle"}}
	<label {{action 'editTodo' on="doubleClick"}}>{{title}}</label><button {{action "removeTodo" todo}} class="destroy"></button>
{{/if}}